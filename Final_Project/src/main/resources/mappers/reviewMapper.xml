<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itwillbs.mappers.reviewMapper">
<!-- select count(*) as count from review where reviewee=#{reviewee} -->

	

	<insert id="insertReview">
		insert into revscore(reviewer, rev_score, rev_totalscore)
		values(#{reviewer}, #{revScore} , #{revTotalscore})
	</insert>
	
	<update id="updateTotalscore">
		update review set rev_totalscore = #{revScore} + rev_totalscore
		where reviewee = #{reviewee}
	</update>

	<!-- <select id="updateScore" resultType="java.lang.Integer"> -->
	<!-- update review set rev_total = rev_score+rev_totalscore -->
	<!-- where reviewee = #{reviewee} -->
	<!-- </select> -->
	
	<select id="getReviewer" resultType="com.itwillbs.domain.ReviewDTO">
		select * from revscore where reviewer = #{reviewer}
	</select>



</mapper>